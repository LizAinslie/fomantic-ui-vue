{
	"name": "fomantic-ui-vue",
	"version": "0.0.1",
	"private": false,
	"scripts": {
		"dev": "vue-cli-service build --target lib --name fomantic-ui-vue --watch ./src/index.js",
		"build": "vue-cli-service build --target lib --name fomantic-ui-vue ./src/index.js",
		"lint": "vue-cli-service lint"
	},
	"main": "./dist/fomantic-ui-vue.common.js",
	"dependencies": {
		"core-js": "^3.6.4",
		"vue": "^2.6.11"
	},
	"files": [
		"dist/*",
		"src/*",
		"public/*",
		"*.json",
		"*.js"
	],
	"devDependencies": {
		"@vue/cli-plugin-babel": "~4.2.0",
		"@vue/cli-plugin-eslint": "~4.2.0",
		"@vue/cli-service": "~4.2.0",
		"babel-eslint": "^10.0.3",
		"eslint": "^6.7.2",
		"eslint-plugin-prettier": "^3.1.2",
		"eslint-plugin-vue": "^6.1.2",
		"prettier": "^1.19.1",
		"vue-template-compiler": "^2.6.11"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/essential",
			"eslint:recommended"
		],
		"parserOptions": {
			"parser": "babel-eslint"
		},
		"plugins": ["prettier"],
		"rules": {
			"prettier/prettier": "error"
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	]
}
